{
  "connections": [
    {
      "port": {
        "$filter": "system.env",
        "production": 80,
        "$default": 80
      },
      "labels": [
        "insecure"
      ],
      "load": {
        "maxHeapUsedBytes": {
          "$filter": "system.env",
          "production": 1610612736,
          "$default": 536870912
        },
        "maxRssBytes": {
          "$filter": "system.env",
          "production": 3221225472,
          "$default": 1073741824
        },
        "maxEventLoopDelay": 30000
      },
      "state": {
        "ttl": 86400000,
        "isSecure": false,
        "path": "/",
        "isHttpOnly": true
      }
    }
  ],
  "server": {
    "load": {
      "sampleInterval": 5000
    },
    "cache": {
      "name": "memoryCache",
      "engine": "catbox-memory",
      "maxByteSize": 26214400
    }
  },
  "plugins": {
    "yar": {
      "name": "otw_session",
      "maxCookieSize": 0,
      "cookieOptions": {
        "password": "SECURE_PASS",
        "isSecure": false,
        "isHttpOnly": true
      }
    },
    "passes-management": {
      "server": {
        "host": {
          "$filter": "system.env",
          "production": "$$SITE_HOST",
          "$default": "192.168.0.103"
        }
      },
      "mongoose": {
        "connection-string": {
          "$filter": "system.env",
          "production": "$$MONGOOSE_CONN_STR",
          "$default": "mongodb://localhost/test"
        },
        "db-data": {
          "vocabularies": [
            {
              "type": "passType",
              "value": "Full"
            },
            {
              "type": "passType",
              "value": "Party"
            },
            {
              "type": "passType",
              "value": "Saturday"
            },
            {
              "type": "passType",
              "value": "Sunday"
            },
            {
              "type": "gender",
              "value": "M"
            },
            {
              "type": "gender",
              "value": "F"
            },
            {
              "type": "status",
              "value": "PAID"
            },
            {
              "type": "status",
              "value": "SENT"
            },
            {
              "type": "status",
              "value": "USED"
            }
          ],
          "roles": [
            {
              "roleName": "admin",
              "allowedPaths": [
                ".*:/.*"
              ]
            },
            {
              "roleName": "validator",
              "allowedPaths": [
                "GET:/static/.*",
                "GET:/validator/.*",
                ".*:/login/"
              ]
            }
          ],
          "users": [
            {
              "username": "admin",
              "password": {
                "$filter": "system.env",
                "production": "$$OTW_ADMIN_PASSWORD",
                "$default": "admin"
              },
              "roleName": "admin"
            },
            {
              "username": "validator",
              "password": {
                "$filter": "system.env",
                "production": "$$OTW_VALIDATOR_PASSWORD",
                "$default": "validator"
              },
              "roleName": "validator"
            }
          ]
        }
      },
      "access-control": {
        "unauthorized-redirect": "/login/",
        "anonymous": [
          "GET:/static/.*",
          ".*:/login/"
        ]
      }
    }
  }
}